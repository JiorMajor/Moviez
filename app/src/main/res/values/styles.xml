<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleTextStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="headerTextStyle" parent="titleTextStyle">
        <item name="android:layout_marginLeft">@dimen/spacing_title_margin</item>
    </style>

    <style name="subHeaderTextStyle" parent="titleTextStyle">
        <item name="android:paddingLeft">@dimen/spacing_med</item>
    </style>

    <style name="subHeaderContentTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingLeft">@dimen/spacing_med</item>
        <item name="android:paddingBottom">@dimen/spacing_med</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="infoTextStyle">
        <item name="android:paddingLeft">@dimen/spacing_title_margin</item>
        <item name="android:paddingBottom">@dimen/spacing_x_small</item>
        <item name="android:paddingTop">@dimen/spacing_x_small</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorGrayBlack</item>
    </style>

</resources>
